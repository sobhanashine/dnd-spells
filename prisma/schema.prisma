generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Spell {
  id          Int    @id @default(autoincrement())
  spell_name  String @map("spell_name") // Renaming field to match the database
  level       String
  casting_time String @map("casting_time") // Renaming field to match the database
  range       String
  components  String
  duration    String
  description String
  classes     String
  source_book String @map("source_book") // Renaming field to match the database
  school      String?
  tag         String?
}

