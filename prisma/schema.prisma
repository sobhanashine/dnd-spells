generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Spell {
  id           Int     @id @default(autoincrement())
  spell_name   String
  ritual       Boolean
  school       String
  tags         String
  level        Int
  casting_time String
  range        String
  components   String
  duration     String
  description  String
  classes      String
  source_book  String
}
